# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key
SUPABASE_URL=your_supabase_project_url
SUPABASE_ANON_KEY=your_supabase_anon_key

# Amazon Bedrock Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key

# OpenAI (Responses API with web_search)
OPENAI_API_KEY=your_openai_api_key
OPENAI_RESPONSES_TIMEOUT_MS=45000
OPENAI_RESPONSES_MODEL=gpt-5-nano
OPENAI_RESPONSES_MODEL_FAST=gpt-5-nano

# External API Keys
KROGER_CLIENT_ID=your_kroger_client_id
KROGER_CLIENT_SECRET=your_kroger_client_secret
SPOONACULAR_API_KEY=your_spoonacular_api_key
EDAMAM_APP_ID=your_edamam_app_id
EDAMAM_APP_KEY=your_edamam_app_key
ELEVENLABS_API_KEY=your_elevenlabs_api_key
GOOGLE_PLACES_API_KEY=your_google_places_api_key

# Redis Configuration
REDIS_URL=redis://localhost:6379

# Next.js Configuration
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your_nextauth_secret

# Tavily (Web Search) API
# Used for recipe recommendations and context gathering
TAVILY_API_KEY=your_tavily_api_key
NEXT_PUBLIC_TAVILY_MOCK=true

# Development toggles
# Set to false to prefer live data where supported (handled via server routes)
NEXT_PUBLIC_KROGER_MOCK=true
